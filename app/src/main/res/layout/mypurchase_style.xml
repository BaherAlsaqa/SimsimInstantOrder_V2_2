        </RelativeLayout>

        <!--<ImageView
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_gravity="bottom"
            android:background="@drawable/line_2" />-->
    </RelativeLayout>
</android.support.v7.widget.CardView>