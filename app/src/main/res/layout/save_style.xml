<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:clickable="true"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="true"
    app:ignore="NamespaceTypo"
    card_view:cardBackgroundColor="@android:color/transparent"
    card_view:cardElevation="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center|start"
        android:orientation="horizontal"
        android:id="@+id/linear_checkin"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingStart="@dimen/magrinitems"
        android:paddingEnd="@dimen/magrinitems"
        android:background="?android:attr/selectableItemBackground">
        <!--<TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:text="baher faree elsaqqa baher faree elsaqqa "
            android:id="@+id/details"
            android:textSize="@dimen/titleSize"
            android:textColor="#6c6c6c"
            android:lines="2"
            android:layout_marginEnd="10dp"/>-->
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.8"
            android:gravity="center|start">

            <FrameLayout
                android:id="@+id/product_image1"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:padding="2dp"
                android:background="@drawable/borders2"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="5dp">



                <ImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/product_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:src="@drawable/image_6"
                    android:background="@color/colorAccent2"
                    android:scaleType="fitXY"/>
            </FrameLayout>
            <net.phpsm.simsim.simsiminstantorder.CustomViews.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/product_name"
                android:text=""
                android:textSize="@dimen/titleSize"
                android:textColor="@color/bold_name"
                android:textStyle="bold"
                android:lines="1"

                android:layout_marginTop="3dp"
                android:layout_toEndOf="@id/product_image1"/>
            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/image_1"
                app:civ_border_overlay="true"
                app:civ_border_width="1dp"
                app:civ_border_color="@color/colorAccent"
                android:id="@+id/image"
                android:layout_marginEnd="5dp"
                android:layout_below="@id/product_name"
                android:layout_toEndOf="@id/product_image1"
                android:layout_marginTop="5dp"/>
            <net.phpsm.simsim.simsiminstantorder.CustomViews.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/name"
                android:text="baher alsaqqa"
                android:textSize="@dimen/content"
                android:textColor="@color/colorAccent"
                android:layout_toEndOf="@id/image"
                android:layout_below="@id/product_name"
                android:layout_marginTop="7dp"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="0.2"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginEnd="10dp">

            <net.phpsm.simsim.simsiminstantorder.CustomViews.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:gravity="center"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/content"
                android:id="@+id/time"/>
        </LinearLayout>

    </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/recycler_color"
            android:layout_gravity="bottom"/>


</android.support.v7.widget.CardView>