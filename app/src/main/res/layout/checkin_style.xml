<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:clickable="true"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="true"
    app:ignore="NamespaceTypo"
    card_view:cardBackgroundColor="@android:color/transparent"
    card_view:cardElevation="0dp">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/linear_checkin"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?android:attr/selectableItemBackground"
            android:gravity="center|start"
            android:layout_marginEnd="@dimen/magrinitems"
            android:layout_marginStart="@dimen/magrinitems">

            <FrameLayout
                android:id="@+id/img_v1"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:padding="2dp"
                android:background="@drawable/borders2"
                android:layout_marginEnd="10dp">



                <ImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/img_v"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@color/colorAccent2"
                    android:scaleType="fitXY"
                    android:src="@drawable/image_6" />
            </FrameLayout>

            <net.phpsm.simsim.simsiminstantorder.CustomViews.CustomTextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:layout_toEndOf="@id/img_v1"
                android:text="baher faree elsaqqa"
                android:textColor="@color/bold_name"
                android:textSize="@dimen/titleSize"
                android:textStyle="bold" />

            <net.phpsm.simsim.simsiminstantorder.CustomViews.CustomTextView
                android:id="@+id/category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/name"
                android:layout_toEndOf="@id/img_v1"
                android:text="Restaurant"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/content" />
        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_gravity="bottom"
            android:background="@color/recycler_color" />
    </FrameLayout>


</android.support.v7.widget.CardView>