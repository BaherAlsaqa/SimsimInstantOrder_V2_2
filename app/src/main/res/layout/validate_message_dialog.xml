<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minWidth="320dp"
    android:orientation="vertical"
    android:background="@drawable/shape_background_branches"
    android:padding="15dp"
    android:gravity="center"
    android:layout_gravity="center">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/bold_name"
        android:text="@string/must_validate_sms"
        android:textSize="@dimen/title"
        android:textStyle="bold"
        android:layout_margin="20dp"
        android:gravity="center"/>

    <Button
        android:id="@+id/btn_ok"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        style="?android:attr/borderlessButtonStyle"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/selector_btn_recovery"
        android:text="@string/ok"
        android:textColor="@color/white"
        android:textSize="@dimen/boldtext"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="30dp"/>

</LinearLayout>