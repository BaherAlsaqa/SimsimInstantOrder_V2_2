<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:clickable="true"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="true"
    app:ignore="NamespaceTypo"
    card_view:cardBackgroundColor="@android:color/transparent"
    card_view:cardElevation="0dp"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center|start"
        android:orientation="horizontal"
        android:id="@+id/linear_checkin"
        android:background="?android:attr/selectableItemBackground">
        <FrameLayout
            android:id="@+id/image2"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="3dp">

            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/back_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:src="#00ffffff"
                app:civ_border_color="@color/colorAccent"
                app:civ_border_overlay="true"
                app:civ_border_width="1dp" />

            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/image"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:paddingStart="0.1dp"
                android:paddingTop="0.1dp"
                android:src="@drawable/image_6" />
        </FrameLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="3dp">
            <net.phpsm.simsim.simsiminstantorder.CustomViews.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="baher faree elsaqqa"
                android:id="@+id/name"
                android:layout_marginTop="5dp"
                android:textSize="@dimen/titleSize"
                android:textStyle="bold"
                android:textColor="@color/bold_name"/>
            <net.phpsm.simsim.simsiminstantorder.CustomViews.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/location"
                android:text="jaddah"
                android:drawablePadding="5dp"
                android:textSize="12sp"
                android:layout_marginTop="3dp"
                android:drawableStart="@drawable/ic_gray_location"
                android:textColor="@color/colorAccent"/>
        </LinearLayout>
    </LinearLayout>
    <net.phpsm.simsim.simsiminstantorder.CustomViews.CustomButton
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:id="@+id/follow"
        android:background="@drawable/shapbtnaddfriends"
        android:drawableStart="@drawable/ic_plus_button"
        android:text="@string/follow"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:textColor="@color/white"
        android:textSize="@dimen/contentSize"
        android:gravity="center"
        android:layout_gravity="center|end"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@drawable/line_2"
        android:layout_gravity="bottom"/>


</android.support.v7.widget.CardView>