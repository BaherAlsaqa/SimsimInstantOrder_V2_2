<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/toolbar_background_shape_signup1"
        android:elevation="6dp"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <net.phpsm.simsim.simsiminstantorder.CustomViews.CustomTitleTextView
            android:id="@+id/toolbar_title"
            style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />

    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:fillViewport="true">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="25dp"
            android:paddingBottom="40dp"
            tools:context="net.phpsm.simsim.simsiminstantorder.activitys.Signup1">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/LLLoginScreen"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerInParent="true"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingEnd="50dp"
                    android:paddingStart="50dp"
                    android:visibility="visible">

                    <ImageView
                        android:id="@+id/logo"
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:padding="20dp"
                        android:src="@drawable/logo1" />

                    <net.phpsm.simsim.simsiminstantorder.CustomViews.CustomEditText
                        android:id="@+id/username"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="10dp"
                        android:background="@null"
                        android:gravity="start|center"
                        android:hint="@string/name"
                        android:inputType="text"
                        android:paddingStart="10dp"
                        android:textColor="@color/texthint"
                        android:textColorHint="@color/texthint"
                        android:textSize="@dimen/title" />

                    <View
                        android:id="@+id/underline_username"
                        android:layout_width="match_parent"
                        android:layout_height="1.5dp"
                        android:layout_marginBottom="10dp"
                        android:background="@color/under_line" />

                    <net.phpsm.simsim.simsiminstantorder.CustomViews.CustomEditText
                        android:id="@+id/email"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="10dp"
                        android:background="@null"
                        android:gravity="start|center"
                        android:hint="@string/email"
                        android:inputType="textEmailAddress"
                        android:paddingStart="10dp"
                        android:textColor="@color/texthint"
                        android:textColorHint="@color/texthint"
                        android:textSize="@dimen/title" />

                    <View
                        android:id="@+id/underline_email"
                        android:layout_width="match_parent"
                        android:layout_height="1.5dp"
                        android:layout_marginBottom="10dp"
                        android:background="@color/under_line" />

                    <net.phpsm.simsim.simsiminstantorder.CustomViews.CustomEditText
                        android:id="@+id/mobile"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="10dp"
                        android:background="@null"
                        android:gravity="start|center"
                        android:hint="@string/phone"
                        android:inputType="number"
                        android:maxLength="10"
                        android:paddingStart="10dp"
                        android:textColor="@color/texthint"
                        android:textColorHint="@color/texthint"
                        android:textSize="@dimen/title" />

                    <View
                        android:id="@+id/underline_mobile"
                        android:layout_width="match_parent"
                        android:layout_height="1.5dp"
                        android:background="@color/under_line" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="20dp"
                        android:id="@+id/linearlayout_opps"
                        android:visibility="invisible">

                        <net.phpsm.simsim.simsiminstantorder.CustomViews.CustomTextView
                            android:id="@+id/txt_exist"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/orange_line"
                            android:textSize="@dimen/title"
                            android:text=""
                            android:gravity="start|center"/>

                        <net.phpsm.simsim.simsiminstantorder.CustomViews.CustomTextView
                            android:id="@+id/txt_login"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/bold_name"
                            android:textSize="@dimen/title"
                            android:text="@string/txt_login"/>
                    </LinearLayout>

                    <net.phpsm.simsim.simsiminstantorder.CustomViews.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1/3"
                        android:layout_gravity="end"
                        android:layout_marginBottom="5dp"
                        android:layout_marginEnd="5dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="30dp"
                        android:layoutDirection="ltr">

                        <View
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="10dp"
                            android:background="@drawable/shap_green_seekbar1" />
                        <View
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="10dp"
                            android:background="@color/colorAccent1" />
                        <View
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="10dp"
                            android:background="@drawable/shap_green_seekbar22"/>

                    </LinearLayout>

                    <net.phpsm.simsim.simsiminstantorder.CustomViews.CustomButton
                        android:id="@+id/next"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/selector_btn_next"
                        android:gravity="center"
                        android:text="@string/next"
                        android:textColor="@color/bold_name"
                        android:textSize="@dimen/boldtext1" />
                </LinearLayout>

                <!--<ProgressBar
                    android:id="@+id/progress"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:visibility="gone" />-->
                <com.wang.avi.AVLoadingIndicatorView
                    android:id="@+id/progress"
                    style="@style/AVLoadingIndicatorView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    app:indicatorColor="@color/colorPrimary"
                    app:indicatorName="BallPulseIndicator"
                    android:layout_gravity="center"/>
            </FrameLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>

