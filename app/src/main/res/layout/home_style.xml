<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:clickable="true"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="true"
    app:ignore="NamespaceTypo"
    card_view:cardBackgroundColor="@android:color/transparent"
    card_view:cardElevation="0dp">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/relative_home"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?android:attr/selectableItemBackground"
            android:gravity="center">

            <FrameLayout
                android:id="@+id/img_v1"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:padding="2dp"
                android:background="@drawable/borders2"
                android:layout_alignParentStart="true"
                android:layout_centerInParent="true"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="@dimen/magrinitems">

                <ImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/img_v"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@color/colorAccent2"
                    android:scaleType="fitXY"
                    android:src="@drawable/image_6" />
            </FrameLayout>

            <net.phpsm.simsim.simsiminstantorder.CustomViews.CustomTextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:layout_toEndOf="@id/img_v1"
                android:text="baher alsaqqa"
                android:textColor="@color/bold_name"
                android:textStyle="bold"
                android:textSize="@dimen/titleSize"
                android:layout_marginEnd="@dimen/magrinitems"/>

            <net.phpsm.simsim.simsiminstantorder.CustomViews.CustomTextView
                android:id="@+id/details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/name"
                android:layout_toEndOf="@id/img_v1"
                android:lines="2"
                android:text=""
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/contentSize"
                android:textAlignment="viewStart"
                android:gravity="start|center"
                android:layout_marginEnd="@dimen/magrinitems"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="@drawable/shapeline"
                android:visibility="visible"/>
        </RelativeLayout>
    </FrameLayout>
</android.support.v7.widget.CardView>