<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="true"
    app:ignore="NamespaceTypo"
    card_view:cardBackgroundColor="@color/white"
    card_view:cardElevation="0dp"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center|start"
        android:orientation="horizontal"
        android:background="?android:attr/selectableItemBackground">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.8"
            android:gravity="center|start"
            android:paddingBottom="5dp">

            <FrameLayout
                android:id="@+id/image2"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_marginEnd="10dp">

                <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/back_img"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:src="#00ffffff"
                    app:civ_border_color="@color/colorAccent"
                    app:civ_border_overlay="true"
                    app:civ_border_width="1dp" />

                <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/image"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:paddingStart="0.1dp"
                    app:civ_border_color="@color/bold_name"
                    android:paddingTop="0.1dp"
                    android:src="@drawable/image_6" />
            </FrameLayout>
            <net.phpsm.simsim.simsiminstantorder.CustomViews.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/name"
                android:text="baher alsaqqa"
                android:textSize="@dimen/titleSize"
                android:textColor="@color/bold_name"
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@id/image2" />
            <ImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_true_message"
                android:id="@+id/image1"
                android:layout_marginEnd="5dp"
                android:layout_below="@id/name"
                android:layout_toEndOf="@id/image2"
                android:layout_marginTop="10dp"/>
            <net.phpsm.simsim.simsiminstantorder.CustomViews.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/content"
                android:text="baher alsaqqa"
                android:textSize="@dimen/titleSize"
                android:textColor="@color/colorAccent"
                android:layout_toEndOf="@id/image1"
                android:layout_below="@id/name"
                android:layout_marginTop="7dp"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:orientation="vertical"
            android:gravity="center|end">

            <net.phpsm.simsim.simsiminstantorder.CustomViews.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3:15"
                android:gravity="center"
                android:layout_marginTop="1dp"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/content"
                android:id="@+id/time"/>
        </LinearLayout>

    </LinearLayout>



</android.support.v7.widget.CardView>